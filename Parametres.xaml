<Window
    x:Class="CompilationMiniJeux.Parametres"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CompilationMiniJeux"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Paramètres"
    Width="400"
    Height="200"
    mc:Ignorable="d" ResizeMode="NoResize">
    <Grid>
        <Label
            Margin="66,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Content="Volume" />
        <Slider
            x:Name="sliderVolume"
            Width="120"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            DragLeave="sliderVolume_DragLeave"
            Maximum="100"
            Value="50" ValueChanged="sliderVolume_ValueChanged" />
        <Button
            x:Name="buttonOK"
            Width="50"
            Margin="259,129,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="buttonOK_Click"
            Content="OK" />
        <Button
            x:Name="buttonAnnuler"
            Width="50"
            Margin="314,129,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="buttonAnnuler_Click"
            Content="Annuler" />

    </Grid>
</Window>
